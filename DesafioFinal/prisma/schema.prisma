generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  clientId  Int    @id @default(autoincrement())
  name      String
  email     String
  password  String
  telephone String
  address   String
}

model Author {
  authorId  Int    @id @default(autoincrement())
  name      String
  email     String
  telephone String
  Book      Book[]
  Sale      Sale[]
}

model Book {
  bookId     Int    @id @default(autoincrement())
  name       String
  value      Float
  stock      Int
  fkAuthorId Int

  author Author @relation(fields: [fkAuthorId], references: [authorId])
  Sale   Sale[]
}

model Sale {
  saleId     Int      @id @default(autoincrement())
  value      Float
  date       DateTime
  fkAuthorId Int
  fkBookId   Int

  author Author @relation(fields: [fkAuthorId], references: [authorId])
  book   Book   @relation(fields: [fkBookId], references: [bookId])
}
